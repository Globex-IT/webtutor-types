{
    "compilerOptions": {
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "target": "es5",
        "module": "es6",
        "allowJs": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "declaration": true,
        "strictFunctionTypes": true,
        "strict": true,
        "noLib": true,
        "baseUrl": "src",
        "outDir": "../../lib",
        "typeRoots": [
            "../web-soft/types",
            "../web-soft/types/xml"
        ]
    },
    "include": [
        "**/*.d.ts",
        "./**/*.ts",
        "../.eslintrc.json"
    ]
}
