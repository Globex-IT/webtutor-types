{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strict": true,
        "noLib": true,
        "noEmit": true,
        "baseUrl": "tests",
        "typeRoots": [
            "../src/lib",
            "../src/lib/xml"
        ]
    },
    "include": [
        "**/*.ts",
        "../src/**/*.d.ts"
    ]
}
